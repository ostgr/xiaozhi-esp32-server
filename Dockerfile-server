# syntax=docker/dockerfile:1.4
# Optimized base image for xiaozhi-server

# Stage 1: Base dependencies
FROM python:3.10-slim as base

# Install system dependencies (all required for audio processing)
# - libopus0: Required by opuslib_next for Opus encode/decode (ESP32 ↔ Server)
# - ffmpeg: Required by pydub for audio format conversion (MP3/WAV → PCM → Opus)
# - locales: Required for UTF-8 support in logs and text processing
RUN --mount=type=cache,target=/var/cache/apt,sharing=locked \
    --mount=type=cache,target=/var/lib/apt,sharing=locked \
    apt-get update && \
    apt-get install -y --no-install-recommends \
        libopus0 \
        ffmpeg \
        locales \
        ca-certificates && \
    sed -i '/en_US.UTF-8/s/^# //g' /etc/locale.gen && \
    sed -i '/vi_VN.UTF-8/s/^# //g' /etc/locale.gen && \
    locale-gen en_US.UTF-8 vi_VN.UTF-8 && \
    rm -rf /var/lib/apt/lists/* /tmp/* /var/tmp/*

# Set environment variables
ENV LANG=en_US.UTF-8 \
    LC_ALL=en_US.UTF-8 \
    LANGUAGE=en_US:en \
    PYTHONIOENCODING=utf-8 \
    PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1 \
    PIP_NO_CACHE_DIR=1 \
    PIP_DISABLE_PIP_VERSION_CHECK=1

WORKDIR /opt/xiaozhi-esp32-server

# Stage 2: Python dependencies builder
FROM base as builder

# Configure pip with reasonable defaults
RUN pip config set global.timeout 120 && \
    pip config set install.retries 5

# Copy only requirements first (better caching)
COPY main/xiaozhi-server/requirements.txt .

# Install dependencies with cache mount
RUN --mount=type=cache,target=/root/.cache/pip \
    pip install --no-cache-dir --upgrade pip setuptools wheel && \
    pip install --no-cache-dir -r requirements.txt --default-timeout=120

# Stage 3: Final optimized image
FROM base as final

# Copy installed packages from builder
COPY --from=builder /usr/local/lib/python3.10/site-packages /usr/local/lib/python3.10/site-packages
COPY --from=builder /usr/local/bin /usr/local/bin

# Add metadata labels
LABEL maintainer="xiaozhi-server" \
      org.opencontainers.image.title="xiaozhi-server-base" \
      org.opencontainers.image.description="Base image with dependencies for xiaozhi-server" \
      org.opencontainers.image.vendor="xiaozhi" \
      org.opencontainers.image.version="1.0.0"

WORKDIR /opt/xiaozhi-esp32-server

# Verify installation and clean up
RUN python -c "import sys; print(f'Python {sys.version}')" && \
    python -c "import deepgram; print(f'Deepgram SDK installed')" && \
    find /usr/local/lib/python3.10/site-packages -type d -name __pycache__ -exec rm -rf {} + 2>/dev/null || true && \
    find /usr/local/lib/python3.10/site-packages -type f -name '*.pyc' -delete 2>/dev/null || true && \
    find /usr/local/lib/python3.10/site-packages -type f -name '*.pyo' -delete 2>/dev/null || true

# Stage 4: Application runtime
FROM final as runtime

# Copy application source code
COPY main/xiaozhi-server/ .

# Expose ports
# 8000: WebSocket server (ws://host:8000/xiaozhi/v1/)
# 8003: HTTP server (OTA updates, vision API)
EXPOSE 8000 8003

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=40s --retries=3 \
    CMD python -c "import requests; requests.get('http://localhost:8003/health', timeout=5)" || exit 1

# Run application
CMD ["python", "app.py"]
